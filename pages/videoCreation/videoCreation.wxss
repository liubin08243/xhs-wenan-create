.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
}

.url-input {
  width: 100%;
  min-height: 100px;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 10px;
  margin-bottom: 10px;
  font-size: 14px;
  box-sizing: border-box;
}

.create-btn {
  width: 100%;
  height: 44px;
  background-color: #007AFF;
  color: #fff;
  border-radius: 4px;
  font-size: 16px;
  line-height: 44px;
  margin-bottom: 20px;
}

.result-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.result-title {
  font-size: 18px;
  font-weight: bold;
}

.result-textarea {
  flex: 1;
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 10px;
  font-size: 16px;
  line-height: 1.5;
}

.result-scroll {
  flex: 1;
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

.result-content {
  font-size: 16px;
  line-height: 1.5;
  white-space: pre-wrap;
  word-wrap: break-word;
  padding: 10px;
}

.char-count {
  text-align: right;
  font-size: 12px;
  color: #888;
  margin-bottom: 10px;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
  width: 100%;
}

.copy-text {
  font-size: 14px;
  color: #007AFF;
  text-decoration: underline;
}

.debug-url {
  margin-top: 10px;
  font-size: 12px;
  color: #888;
}
